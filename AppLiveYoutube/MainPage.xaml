<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppLiveYoutube.MainPage"
             xmlns:vm="clr-namespace:AppLiveYoutube.ViewModels"
             x:DataType="vm:TestViewModel">
    <ContentPage.BindingContext>
        <vm:TestViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label Text="{Binding Text}" />
            <Button Text="Cambiar texto" Command="{Binding CambiarTextoCommand}"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
